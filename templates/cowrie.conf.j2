## /etc/supervisor/conf.d/cowrie.conf

[program:cowrie]
#command=authbind --deep twistd -l /opt/cowrie/log/cowrie.log --umask 0077 --pidfile cowrie.pid --nodaemon cowrie
#command=authbind --deep /opt/cowrie/env-cowrie/bin/twistd -l /opt/cowrie/log/cowrie.log --umask 0077 --pidfile cowrie.pid --nodaemon cowrie
command=/opt/cowrie/bin/cowrie start
directory=/opt/cowrie
stdout_logfile=/var/log/supervisor/cowrie.out
#stderr_logfile=/var/log/supervisor/cowrie.err
autostart=true
autorestart=true
redirect_stderr=true
stopasgroup=true
killasgroup=true
user=cowrie
